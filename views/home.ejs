<%- include('partials/header.ejs') %>

    <h1>Home</h1>
    <p><%= startingContent %></p>

    <% if(locals.posts) { 
        posts.forEach(post => {%>
            <div class="post">
                <h1>
                    <%= post.postTitle %>
                </h1>
                <p>
                    <%= post.postContent.substring(0,100) +'...' %>
                    <a href="/posts/<%=post._id%>">Read more</a>
                </p>
            </div>
        <% })
    } %>

<%- include('partials/footer.ejs') %>
