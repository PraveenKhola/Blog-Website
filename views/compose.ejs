<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="mb-3">
        <label for="Input1" class="form-label">Title</label>
        <input type="text" class="form-control" id="Input1" name='postTitle'>
    </div>
    <div class="mb-3">
        <label for="Textarea1" class="form-label">Post Content</label>
        <textarea class="form-control" id="Textarea1" rows="3" name="postContent"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary submit-button">Publish</button>
</form>

